@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Menu Start -->
<div id="page-top"></div>
<nav id="main-menu" class="navbar navbar-expand-lg navbar-fixed-top p-0">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="q1" asp-action="index"><img style="height: 70px; margin-top: -15px" src="~/images/logo.png" alt="Muse Logo"/></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul id="headernavigation" class="nav navbar-nav ms-auto">
                <li class="nav-item active"><a class="nav-link"  asp-area="" asp-controller="q1" asp-action="index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="q1" asp-action="profile">Profile</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="q1" asp-action="company">Company</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="q1" asp-action="service">Service</a></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="q1" asp-action="collaboration">Collaboration</a></li>
            </ul> 
        </div>
    </div>
</nav>

<!-- Main Slider -->
<section id="main-slider" class="main-slide-wraper carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="active carousel-item ">
            <div id="slide-item-1" class="main-slider-bg  slide-element">
                <div class="bg-pattern main-slider-bg">
                    <div class="main-slider-bg">
                        <div class="container">
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        
        <div class="carousel-item">
            <div id="slide-item-2" class="main-slider-bg slide-element">
                <div class="bg-pattern main-slider-bg">
                    <div class="main-slider-bg">
                        <div class="container">
                            <div class="slider-content text-center">
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="slide-nav left" href="#main-slider" data-bs-slide="prev"><i class="fa fa-angle-left"></i></a>
    
    <a class="slide-nav right" href="#main-slider" data-bs-slide="next"><i class="fa fa-angle-right"></i></a>
    
    <div class="next-section" id="next-section">
        <img class="scrollfeature" src="~/images/down-angle.png" alt="go down">
    </div>	
</section>

<section id="feature" class="feature">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 element-from-top">
                <h2 class="section-title">Our Services</h2>
                <div class="section-title-bottom">
                    <span class="section-title-bottom-inner yellow-border"></span>
                </div>
            </div>

            <div id="feature-1" class="col-sm-6 col-lg-4  element-from-left">
                <div class="feature-hex ">
                    <div class="feature-hex-in light-orange">
                        <div class="feature-icon">
                            <img src="~/images/feature-icon/youtube.png" alt="feature icon" style="height: 80px">
                        </div>
                        <h3 class="feature-title">Youtube</h3>
                        <p class="fearure-text"><strong><a href="https://www.youtube.com/c/MuseAsia/" target="_blank" class="text-white">MUSE Asia YouTube Channel</a></strong> offers full HD Episodes of the latest Anime under our licensing banner for free!</p>
                    </div> 
                </div>
            </div>

            <div id="feature-2" class="col-sm-6 col-lg-4 element-from-bottom">
                <div class="feature-hex">
                    <div class="feature-hex-in light-orange">
                        <div class="feature-icon"><img src="~/images/feature-icon/hakken.png" alt="feature icon" style="height: 80px"></div>
                        <h3 class="feature-title">Hakken</h3>
                        <p class="fearure-text"><strong>Hakken!</strong> is a brand new online retail store by <strong>MUSE Communication SG.</strong></p>
                    </div> 
                </div>
            </div>

            <div id="feature-3" class="col-sm-6 col-lg-4 element-from-right">
                <div class="feature-hex">
                    <div class="feature-hex-in light-orange">
                        <div class="feature-icon">
                            <img src="~/images/feature-icon/ticket.png" alt="feature icon" style="height: 80px; filter: invert(100%) sepia(79%) saturate(0%) hue-rotate(48deg) brightness(108%) contrast(101%);">
                        </div>
                        <h3 class="feature-title">Events</h3>
                        <p class="fearure-text"><strong>MUSE Communication Singapore</strong> will be actively participating in various events regionally.</p>
                    </div> 
                </div>
            </div>

            <div id="feature-4" class="col-sm-6 col-lg-6 element-from-right">
                <div class="feature-hex">
                    <div class="feature-hex-in light-orange">
                        <div class="feature-icon">
                            <img src="~/images/feature-icon/lock.png" alt="feature icon" style="height: 80px; filter: invert(100%) sepia(79%) saturate(0%) hue-rotate(48deg) brightness(108%) contrast(101%);">
                        </div>
                        <h3 class="feature-title">Rights and Licensing</h3>
                        <p class="fearure-text"><strong>MUSE Communication </strong> deals with a variety of licensed works, and have endeavored to promote and market titles.</p>
                    </div> 
                </div>
            </div>

            <div id="feature-5" class="col-sm-6 col-lg-6 element-from-right">
                <div class="feature-hex">
                    <div class="feature-hex-in light-orange">
                        <div class="feature-icon">
                            <img src="~/images/feature-icon/ticket.png" alt="feature icon" style="height: 80px; filter: invert(100%) sepia(79%) saturate(0%) hue-rotate(48deg) brightness(108%) contrast(101%);">
                        </div>
                        <h3 class="feature-title">Talent Management</h3>
                        <p class="fearure-text">Interested in inviting a Cosplayer guest for your event? Check back for more information!</p>
                    </div> 
                </div>
            </div>
        </div> 
    </div>
</section> 
